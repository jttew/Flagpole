<?xml version="1.0" encoding="utf-8"?>

<ScrollView     
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    tools:context=".CreateAccountActivity">
    
    
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/createAccountFirstNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Name" 
        />

    <EditText
        android:id="@+id/createAccountFirstNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:ems="10"
		android:inputType="text"
		android:hint="John"
        />
    
    <TextView
        android:id="@+id/createAccountLastNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Name" 
        />

    <EditText
        android:id="@+id/createAccountLastNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:ems="10"
		android:inputType="text"
		android:hint="Smith"
        />
    
    <TextView
        android:id="@+id/createAccountEmailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email" />

    <EditText
        android:id="@+id/createAccountEmailEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:ems="10"
		android:inputType="textEmailAddress"
		android:hint="email@example.com"
        />

    <TextView
        android:id="@+id/createAccontPasswordTextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password" />

    <EditText
        android:id="@+id/createAccountPasswordEditText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:ems="10"
        android:inputType="textPassword" 
        />
    
    <TextView
        android:id="@+id/createAccontPasswordTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Repeat Password" />

    <EditText
        android:id="@+id/createAccountPasswordEditText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:ems="10"
        android:inputType="textPassword" 
        />

    <Button
        android:id="@+id/createAccountSubmitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit" />

</LinearLayout>

</ScrollView>